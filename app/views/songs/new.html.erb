<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name %>
  <div>
  <h3>Notes: </h3>
    <%= f.label :song_notes_1 %>
    <input name="song[note_contents][]" id="song_notes_1" type="text">
    <%= f.label :song_notes_2 %>
    <input name="song[note_contents][]" id="song_notes_2" type="text">
    <%= f.label :song_notes_3 %>
    <input name="song[note_contents][]" id="song_notes_3" type="text">
  </div>
  <%= f.submit %>
<% end %>


