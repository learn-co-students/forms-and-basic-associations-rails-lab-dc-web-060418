<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist %>
  <%= f.text_field :artist_name, list: "artist_names" %>
  <datalist id="artist_names">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>"></option>
    <% end %>
  </datalist>
  <br />

  <%= f.label :genre %>
  <%= f.select :genre_id, Genre.all.map { |g| [ g.name, g.id ] } %>
  <br />

  <%= f.label :notes %><br />
  <%= text_field_tag :'song[note_contents][]', '', id: "song_notes_1" %><br />
  <%= text_field_tag :'song[note_contents][]', '', id: "song_notes_2" %><br />
  <%= f.submit %>
<% end %>
